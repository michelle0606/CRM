<div class="container">
  <div class="Title">廣告行銷</div>
  <div class="choose-bar">
    <button data-choose="filter">選擇目標客戶</button>
    <button data-choose="email">電子報內容</button>
  </div>
  <div class="filter-section">
    <form action="">
      <div>

        <div class="filter-select">
          <ul>
            <li>
              <select name="tag" id="" data-filter="filter">
                <option value="all">全部標籤</option>
              </select></li>
            <li>
              <select name="birthday" id="" data-filter="filter">
                <option value="all">不限生日</option>
                <option value="1">一月 </option>
                <option value="2">二月</option>
                <option value="3">三月</option>
                <option value="4">四月</option>
                <option value="5">五月</option>
                <option value="6">六月</option>
                <option value="7">七月</option>
                <option value="8">八月</option>
                <option value="9">九月</option>
                <option value="10">十月</option>
                <option value="11">十一月</option>
                <option value="12">十二月</option>
              </select>
            </li>
            <li>
              <select name="price" id="" data-filter="filter">
                <option value="all">不限消費金額</option>
              </select>
            </li>
            <li>
              <select name="gender" id="" data-filter="filter">
                <option value="all">不限性別</option>
                <option value="male">男性</option>
                <option value="female">女性</option>
              </select>
            </li>
          </ul>
        </div>
      </div>
      <div class="filter-list-section">
        <table class="filter-list">
          <tr>
            <th>Name</th>
            <th>E-mail</th>
            <th>Phone</th>
          </tr>

        </table>

      </div>


    </form>

  </div>
  <div class="mail-section">
    {{msg}}
    <form method="POST" action="/marketing">
      <p>
        <label>Name</label>
        <input type="text" name="name">
      </p>
      <p>
        <label>Email Address</label>
        <input type="email" name="email">
      </p>
      <p>
        <label>Subject</label>
        <input type="text" name="subject">
      </p>
      <p class="full">
        <label>Message</label>
        <textarea name="message" rows="5"></textarea>
      </p>
      <p class="full">
        <button type="submit">Submit</button>
      </p>
    </form>
  </div>

</div>

<script src="/javascripts/marketingFilter.js"></script>