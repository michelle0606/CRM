{{> messages}}
<div class="container">
  <div class="trade-content">
    <div class="Title">
      {{title}}
    </div>
    <div class="trade">
      <div>
        {{#ifCond customer.name '非會員'}}
        <span>{{customer.name}}</span>
        {{else}}
        <span>會員姓名 <a href="/customers/{{customer.id}}">{{customer.name}} <i class="far fa-user-circle"></i></a></span>
        </br>
        <span>會員電話 {{customer.phoneNr}}</span>
        {{/ifCond}}
      </div>
      {{#if isReturnsPage}}
      <form action="/shops/{{shopId}}/returnsRecord" method="POST">
      {{else}}
      <form action="/customers/{{customer.id}}/record" method="POST">
      {{/if}}
        <div class="creat-trade-page">
          <input type="text" class="productId" placeholder="輸入產品編號">
          <input type="number" class="count" placeholder="數量" value="1">
          <div><i class="fas fa-plus-circle"></i></div>
          <div class="suggestions"></div>
        </div>
        <div class="table-head">
          <table class="trade-product-list">
            <tr>
              <th scope="col">產品編號</th>
              <th scope="col">產品名稱</th>
              <th scope="col">數量</th>
              <th scope="col">價格</th>
              <th scope="col"></th>
            </tr>
          </table>
        </div>
        <div class="total">
          <div>總金額：<input type="number" name="total" value="0" class="total-price"></div>
          <div><button type="submit" class="Button2">送出交易</button></div>
        </div>
      </form>
    </div>
  </div>
</div>

{{!-- Do not change js import order--}}
<script src="/javascripts/addProduct.js"></script>
<script src="/javascripts/autocomplete.js"></script>