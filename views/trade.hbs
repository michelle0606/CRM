              <th scope="col">數量</th>
              <th scope="col">價格</th>
              <th scope="col"></th>
            </tr>
          </table>
        </div>
        總計金額: <input type="number" name="total" value="0" class="total-price">
        <button type="submit">送出交易</button>
      </div>
