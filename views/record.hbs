<div class="home-page">
  <ul class="sidebar fade-out">
    <li></li>
    <li class="active-link"><a href="/customers"><i class="fas fa-users"></i>所有會員</a></li>
    <li><a href=""><i class="fas fa-chart-pie"></i>報表分析</a></li>
    <li><a href=""><i class="far fa-list-alt"></i>庫存管理</a></li>
    <li><a href=""><i class="fas fa-bullhorn"></i>廣告行銷</a></li>
  </ul>
  <div class="main-content content-out">
    <div class="navbar">
      <div><i class="fas fa-outdent icon-rotate-out"></i></div>
      <div><a href="/" class="Logo">waromen</a></div>
      <div class="advance">
        <i class="fas fa-users-cog"></i>
      </div>
      <div class="option">
        <a href="/advance/customers">進階管理</a>
        <form action="/logout" method="GET">
          <button type="submit">登出@Walle</button>
        </form>
      </div>
    </div>

    {{!----}}
    <div class="record-content">
      <div class="Title">
        {{title}}
      </div>
      <div class="record">
        <div>
          <span>會員：</span>
          <span>{{customer.name}}</span>
          <br>
          <span>電話：</span>
          <span>{{customer.phoneNr}}</span>
          <br>
          <span>已消費金額：</span>
          <span>{{totalPrice}} 元</span>
        </div>

        <div class="record-table-head">
          <table class="trade-product-list">
            <tr>
              <th scope="col">交易時間</th>
              <th scope="col">消費金額</th>
              <th scope="col">服務人員</th>
              <th scope="col">詳細內容</th>
            </tr>
            {{#each customer.Sales}}
            <tr>
              <td>{{this.date}}</td>
              <td>{{this.total}} 元</td>
              <td>{{this.User.name}}</td>
              <td><i class="fas fa-search"></i></td>
            </tr>
            {{/each}}

          </table>
        </div>

      </div>
    </div>
    <script src="/javascripts/animation.js"></script>
    <script src="/javascripts/showOption.js"></script>