{{> messages}}
<div class="container">
  {{#if profile}}
  <div class="Title">人員資料編輯</div>
  <form action="/advance/users/{{profile.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
    {{else}}
    <div class="Title">新增店員</div>
    <form action="/advance/salespersons" method="POST" enctype="multipart/form-data">
      {{/if}}

      <div class="form-group">
        <label for="name" class="edit-user-input">Name: </label>
        <input type="text" class="edit-user-input" name="name" id="name" placeholder="Enter Name"
          value="{{profile.name}}">
      </div>
      <div class="form-group">
        <label for="password" class="edit-user-input">Password: </label>
        <input type="password" class=" edit-user-input" name="password" id="password" placeholder="Enter Password"
          value="">
      </div>
      <div class="form-group">
        <label for="password2" class="edit-user-input">Confirm Password: </label>
        <input type="password" class=" edit-user-input" name="password2" id="password2" placeholder="Enter Password"
          value="">
      </div>
      <div class="form-group">
        <label for="role" class="edit-user-input"></label>
        <input type="hidden" class="edit-user-input" name="role" id="role" placeholder="Enter role" value="2">
      </div>
      <div class="form-group">
        <label for="ShopId" class="edit-user-input"></label>
        <input type="hidden" class="edit-user-input" name="ShopId" id="ShopId" placeholder="Enter ShopId"
          value="{{user.ShopId}}">
      </div>
      <div class="form-group">
        <label for="avatar" class="edit-user-input">Avatar: </label>
        <input type="file" class="form-control-file" id="avatar" name="avatar">
      </div>
      <button type="submit" class="edit-user-input">Submit</button>
    </form>
</div>