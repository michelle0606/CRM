<div class="container">
  <div class="Title">店資料編輯</div>
  {{> messages}}
  <form action="/advance/shops/{{shop.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="name" class="edit-user-input">Name: </label>
      <input type="text" class="edit-user-input" name="name" id="name" placeholder="Enter name" value="{{shop.name}}">
    </div>
    <div class="form-group">
      <label for="phoneNr" class="edit-user-input">Tel: </label>
      <input type="text" class="edit-user-input" name="phoneNr" id="phoneNr" placeholder="Enter tel" value="{{shop.phoneNr}}">
    </div>
    <div class="form-group">
      <label for="email" class="edit-user-input">Email: </label>
      <input type="email" class="edit-user-input" name="email" id="eamil" placeholder="Enter email" value="{{shop.email}}">
    </div>
    <div class="form-group">
      <label for="address" class="edit-user-input">Address: </label>
      <input type="text" class="edit-user-input" name="address" id="address" placeholder="Enter address" value="{{shop.address}}">
    </div>
    <div class="form-group">
      <label for="logo" class="edit-user-input">Logo: </label>
      <input type="file" class="form-control-file" id="logo" name="logo">
    </div>
    <button type="submit" class="edit-user-input">Submit</button>
  </form>
</div>