<div class="container">
  {{#if profile}}
  <div class="Title">人員資料編輯</div>
  <form action="/admin/users/{{profile.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
  {{else}}
  <div class="Title">新增人員</div>
  <form action="/admin/users" method="POST" enctype="multipart/form-data">
  {{/if}}
    <div class="form-group">
      <label for="name" class="edit-user-input">Name：</label>
      <input type="text" class="edit-user-input" name="name" id="name" placeholder="Enter name" value="{{profile.name}}">
    </div>
    <div class="form-group">
      <label for="password" class="edit-user-input">Password：</label>
      <input type="text" class="edit-user-input" name="password" id="password" placeholder="Enter password" value="">
    </div>
    <div class="form-group">
      <label for="role" class="edit-user-input">Role：</label>
      <input type="radio" class="edit-user-input" name="role" value=1> 經理
      <input type="radio" class="edit-user-input" name="role" value=2> 店員
    </div>
    <div class="form-group">
      <label for="ShopId" class="edit-user-input">店家：</label>
      <select class="edit-user-input" id="ShopId" name="ShopId">
        {{#each shops}}
          <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label for="avatar" class="edit-user-input">Avatar：</label>
      <input type="file" class="form-control-file" id="avatar" name="avatar">
    </div>
    <button type="submit" class="edit-user-input">Submit</button>
  </form>
</div>