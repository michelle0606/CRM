<div class="container">
  <div class="Title">{{title}}</div>
  <form action="/customers/{{customer.id}}/edit?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="edit-item">
      <aside><label for="name">姓名</label></aside>
      <div><input type="text" name="name" id="name" value="{{customer.name}}"></div>
    </div>
    <div class="edit-item">
      <aside><label for="gender">性別</label></aside>
      <div><input type="text" name="gender" id="gender" value="{{customer.gender}}"></div>
    </div>
    <div class="edit-item">
      <aside><label for="phoneNr">電話</label></aside>
      <div><input type="text" name="phoneNr" id="phoneNr" value="{{customer.phoneNr}}"></div>
    </div>
    <div class="edit-item">
      <aside><label for="birthday">生日</label></aside>
      <div><input type="date" name="birthday" id="birthday" value="{{customer.birthday}}"></div>
    </div>
    <div class="edit-item">
      <aside><label for="email">電子郵件</label></aside>
      <div><input type="email" name="email" id="email" value="{{customer.email}}"></div>
    </div>
    <div class="edit-item">
      <aside><label for="address">地址</label></aside>
      <div><input type="text" name="address" id="address" value="{{customer.address}}"></div>
    </div>
    <div class="edit-item">
      <aside><label for="receiveEmail">是否接收電子報</label></aside>
      <div><input type="checkbox" id="receiveEmail" name="receiveEmail" checked></div>
    </div>


