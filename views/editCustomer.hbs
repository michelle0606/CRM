<div class="home-page">
  <ul class="sidebar fade-out">
    <li></li>
    <li class="active-link"><a href="/customers"><i class="fas fa-users"></i>所有會員</a></li>
    <li><a href=""><i class="fas fa-chart-pie"></i>報表分析</a></li>
    <li><a href=""><i class="far fa-list-alt"></i>庫存管理</a></li>
    <li><a href=""><i class="fas fa-bullhorn"></i>廣告行銷</a></li>
  </ul>
  <div class="main-content content-out">
    <div class="navbar">
      <div><i class="fas fa-outdent icon-rotate-out"></i></div>
      <div><a href="/" class="Logo">waromen</a></div>
      <div class="advance">
        <i class="fas fa-users-cog"></i>
      </div>
      <div class="option">
        <a href="/advance/customers">進階管理</a>
        <form action="/logout" method="GET">
          <button type="submit">登出@Walle</button>
        </form>
      </div>
    </div>
    <form action="/customers/{{customer.id}}/edit?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="single-customer">
        <h1>{{title}}</h1>

        <div class="single-customer-detail">
          <div class="single-customer-img">
            <img src="{{customer.avatar}}" alt="">
          </div>
          <ul>
            <li>Image : <input type="file" name="avatar"></li>
            <li>Name：<input type="text" name="name" value="{{customer.name}}" class="edit-customer-input"></li>
            <li>Age：<input type="text" name="age" value="{{customer.age}}" class="edit-customer-input"></li>
            <li>Gender：<input type="text" name="gender" value="{{customer.gender}}" class="edit-customer-input"></li>
            <li>Tel：<input type="text" name="phoneNr" value="{{customer.phoneNr}}" class="edit-customer-input"></li>
            <li>E-mail：<input type="email" name="email" value="{{customer.email}}" class="edit-customer-input"></li>
            <li>Address：<input type="text" name="address" value="{{customer.address}}" class="edit-customer-input"></li>
            <li><i class="fas fa-window-close"></i> 是否願意收電子報</li>
          </ul>
        </div>
        <div class="single-customer-bar">
          <div class="single-customer-link">
            <button type="submit" class="single-customer-button">確定修改</button>
          </div>
          <div class="single-customer-link">
            <a href="/customers/{{customer.id}}">返回</a>
          </div>

        </div>

      </div>
    </form>


  </div>
</div>